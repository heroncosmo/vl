{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": true,
  "rewrites": [
    { "source": "/admin/login-fixed/", "destination": "/admin/login-fixed.html" },
    { "source": "/admin/property-editor/", "destination": "/admin/property-editor.html" },
    { "source": "/admin/scene-manager/", "destination": "/admin/scene-manager.html" },
    { "source": "/admin/gallery-manager/", "destination": "/admin/gallery-manager.html" },
    { "source": "/admin/hotspot-editor/", "destination": "/admin/hotspot-editor.html" },
    { "source": "/admin/publication-manager/", "destination": "/admin/publication-manager.html" },
    { "source": "/admin/site-settings/", "destination": "/admin/site-settings.html" },
    { "source": "/admin/image-upload/", "destination": "/admin/image-upload.html" },
    { "source": "/admin/leads-manager/", "destination": "/admin/leads-manager.html" },
    { "source": "/admin/tour-preview/", "destination": "/admin/tour-preview.html" },
    { "source": "/client/tour/", "destination": "/client/tour.html" },
    { "source": "/properties/", "destination": "/properties.html" },
    { "source": "/property-details/", "destination": "/property-details.html" },
    { "source": "/admin/", "destination": "/admin/index.html" }
  ],

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/(.*)\\.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)\\.js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/(.*)\\.css",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/(.*)\\.json",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/(.*)\\.jpg",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.png",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.gif",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
